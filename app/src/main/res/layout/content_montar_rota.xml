<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="to.dtech.rotadasaguas.MontarRotaActivity"
    tools:showIn="@layout/activity_montar_rota">

    <ImageView
        android:id="@+id/logo"
        android:layout_gravity="center_horizontal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1.19"
        android:layout_marginTop="25dp"
        android:src="@mipmap/ic_mapinha"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:layout_marginTop="25dp"
        android:text="Minha Rota"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView4"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Selecione as opções e preencha com seus gostos"
        android:textAlignment="center"
        android:textColor="@color/bright_foreground_disabled_material_light"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/btnStyleRota"
        android:src="@drawable/ic_restaurant_blue"
        android:background="@drawable/retangulo"
        android:id="@+id/botaoCriarAlimentacao"
        android:layout_below="@+id/textView5"
        android:layout_toStartOf="@+id/logo"
        android:layout_marginTop="35dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_directions_bike_blue"
        style="@style/btnStyleRota"
        android:background="@drawable/retangulo"
        android:id="@+id/imageButton"
        android:layout_alignTop="@+id/botaoCriarAlimentacao"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/btnStyleRota"
        android:background="@drawable/retangulo"
        android:src="@drawable/ic_local_hotel_blue"
        android:id="@+id/imageButton3"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toEndOf="@+id/logo" />


</RelativeLayout>
