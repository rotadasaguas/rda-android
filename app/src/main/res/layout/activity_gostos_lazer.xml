<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f9f9f9"
    tools:context=".GostosLazerActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/btnStyleRota"
            android:src="@drawable/ic_thumbs_up_down_blue"
            android:background="@drawable/retangulo"
            android:id="@+id/imageSubLazer"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Preferências"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/imageSubLazer"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageSubLazer"
            android:textSize="16dp"
            android:text="Marque o que você gosta"
            android:textAlignment="center"
            android:textColor="@color/bright_foreground_disabled_material_light"
            android:id="@+id/textMarqueSubLazer"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true" />

        <ListView
            android:id="@+id/gostosLazer"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:scrollingCache="false"
            android:layout_width="match_parent"
            android:layout_below="@+id/textMarqueSubLazer"
            android:layout_height="wrap_content"
            android:layout_above="@+id/avancarAcomodacao">

        </ListView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avançar"
            android:id="@+id/avancarAcomodacao"
            style="@style/btnStyleBlue"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />


</RelativeLayout>
