<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f9f9f9"
    tools:context="to.dtech.rotadasaguas.SubLazerActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/btnStyleRota"
            android:src="@drawable/ic_directions_bike_blue"
            android:background="@drawable/retangulo"
            android:id="@+id/imageSubEsportes"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Lazer"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/imageSubEsportes"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageSubEsportes"
            android:textSize="16dp"
            android:text="Marque os tipos de atividades que você gosta"
            android:textAlignment="center"
            android:textColor="@color/bright_foreground_disabled_material_light"
            android:id="@+id/textMarqueSubEsportes"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true" />

        <ListView
            android:id="@+id/subEsportes"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:scrollingCache="false"
            android:layout_width="match_parent"
            android:layout_below="@+id/textMarqueSubEsportes"
            android:layout_height="wrap_content"
            android:layout_above="@+id/avancarGostos">

        </ListView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avançar"
            android:id="@+id/avancarGostosLazer"
            style="@style/btnStyleBlue"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/subEsportes" />


</RelativeLayout>
