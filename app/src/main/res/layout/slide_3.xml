<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/slide3"
    android:background="@color/colorAccent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:text="Let's Go"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/comoFunciona"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/logo"
        android:layout_gravity="center_horizontal"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:padding="20dp"
        android:layout_weight="1.19"
        android:layout_marginTop="61dp"
        android:src="@mipmap/ic_car_travel"
        android:background="@drawable/circulo"
        android:layout_below="@+id/comoFunciona"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Tudo pronto! Agora é só fazer as malas e ir curtir a viagem!"
        android:id="@+id/textView7"
        android:lineSpacingExtra="5dp"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true" />

</RelativeLayout>