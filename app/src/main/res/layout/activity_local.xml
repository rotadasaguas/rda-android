<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_local"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="4dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="2dp"
    tools:context="to.dtech.rotadasaguas.LocalActivity">


    <FrameLayout android:id="@+id/map_frame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1" >

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            mapbox:attribution_enabled="false"
            mapbox:center_latitude="-22.593317"
            mapbox:center_longitude="-46.528705"
            mapbox:style_url="mapbox://styles/mapbox/outdoors-v9"
            mapbox:tilt="45"
            mapbox:zoom="16.5"
            android:layout_height="350dp">
        </com.mapbox.mapboxsdk.maps.MapView>

    </FrameLayout>

    <TextView
        android:text="Sorvetreze"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:layout_below="@id/map_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:id="@+id/titulo_local"
        android:textColor="#2196F3" />

    <View
        android:id="@+id/vw_divider"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#f5f5f5"
        android:layout_below="@+id/titulo_local"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />


    <com.joanzapata.iconify.widget.IconButton
        android:layout_below="@id/vw_divider"
        android:id="@+id/btnMapa"
        android:text="{fa-map} Abrir no Mapa"
        android:shadowDx="0"
        style="@style/btnStyleWhite"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowRadius="0"
        android:textSize="16sp"
        android:textColor="#6b6b6b" />

    <com.joanzapata.iconify.widget.IconButton
        android:id="@+id/btnSite"
        android:layout_below="@id/vw_divider"
        android:text="{fa-globe} Site"
        android:shadowDx="0"
        style="@style/btnStyleWhite"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowRadius="0"
        android:textSize="16sp"
        android:textColor="#6b6b6b" />

    <View
        android:id="@+id/vw_divider_two"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:background="#f5f5f5"
        android:layout_below="@+id/btnSite"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />

    <TextView
        android:text="Classificação"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_below="@id/vw_divider_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:id="@+id/classificacaoLocal"
        android:textColor="#535353" />

    <com.joanzapata.iconify.widget.IconButton
        android:id="@+id/btnLigar"
        android:text="{fa-phone} Ligar"
        android:shadowDx="0"
        style="@style/btnStyleWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowRadius="0"
        android:textSize="16sp"
        android:textColor="#6b6b6b"
        android:layout_alignBaseline="@+id/btnMapa"
        android:layout_alignBottom="@+id/btnMapa"
        android:layout_toEndOf="@+id/classificacaoLocal" />



    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/estrelasLocal"
        android:text="{fa-star} {fa-star} {fa-star} {fa-star}"
        android:shadowDx="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowRadius="0"
        android:textSize="20sp"
        android:layout_marginTop="11dp"
        android:textColor="#fde000"
        android:layout_below="@+id/classificacaoLocal"
        android:layout_alignStart="@+id/classificacaoLocal" />

    <View
        android:id="@+id/vw_divider_3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:background="#f5f5f5"
        android:layout_below="@+id/estrelasLocal"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />

</RelativeLayout>
</ScrollView>
