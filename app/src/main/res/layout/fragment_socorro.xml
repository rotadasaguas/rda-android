<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <View
        android:id="@+id/vw_dividerTop"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="#f5f5f5"
        android:layout_below="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />

    <TextView
        android:id="@+id/nomeCidade"
        android:textSize="22dp"
        android:layout_below="@id/vw_dividerTop"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/vw_divider"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="#f5f5f5"
        android:layout_below="@+id/nomeCidade"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />

    <TextView
        android:id="@+id/descricaoCidade"
        android:layout_below="@id/vw_divider"
        android:textSize="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:lineSpacingExtra="5dp"
        android:text="@string/texto_socorro"
        android:layout_centerHorizontal="true"
        android:textColor="#848484"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
