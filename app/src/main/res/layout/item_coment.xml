<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:background="#ffffff"
    android:paddingLeft="5dp">


    <TextView
        android:textColor="#000"
        android:id="@+id/autor"
        android:text="Autor do Comentario"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:textAllCaps="true"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:textSize="13dp" />

    <View
        android:id="@+id/vw_divider"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/comentario"
        android:layout_below="@+id/comentario"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />

    <TextView
        android:textColor="#aaaaaa"
        android:id="@+id/dataComentario"
        android:text="Data do Comentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingTop="2dp"
        android:paddingLeft="5dp"
        android:textSize="13dp"
        android:layout_below="@+id/autor" />

    <TextView
        android:textColor="#000"
        android:id="@+id/comentario"
        android:text="Comentario"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingTop="2dp"
        android:paddingLeft="5dp"
        android:textSize="13dp"
        android:layout_below="@+id/dataComentario" />

</RelativeLayout>
