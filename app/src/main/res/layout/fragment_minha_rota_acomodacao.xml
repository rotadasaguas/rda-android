<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="to.dtech.rotadasaguas.fragment.AcomodacaoFragment">

    <ImageView
        android:id="@+id/imagemSad"
        android:layout_gravity="center_horizontal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1.19"
        android:visibility="gone"
        android:layout_marginTop="25dp"
        android:src="@mipmap/ic_sad_face"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="120dp"
        android:id="@+id/textoSad"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_below="@id/imagemSad"
        android:text="Nenhum local encontrado."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_acomodacao"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </ScrollView>

</FrameLayout>