<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#03A9F4</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.LoginActionbar" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">#000</item>
    </style>
    <style name="listaConfig" parent="android:style/Widget.ListView">
        <item name="android:divider">#000</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">#ccc</item>
        <item name="android:background">#fff</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>
    <style name="btnStyleBlue" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:padding">10dip</item>
    </style>
    <style name="btnStyleGrey" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#8c8c8c</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/button_grey</item>
        <item name="android:padding">10dip</item>
    </style>
    <style name="btnStyleBlueDark" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#1c4dbf</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/button_blue_dark</item>
        <item name="android:padding">10dip</item>
    </style>
    <style name="btnStyleRed" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#ff3030</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/button_red</item>
        <item name="android:padding">10dip</item>
    </style>
    <style name="btnStyleLogout" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#ff3030</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/button_grey</item>
        <item name="android:padding">10dip</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
